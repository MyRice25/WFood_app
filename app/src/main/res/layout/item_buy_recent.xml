<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100_dsa"
        android:layout_marginStart="@dimen/dp_8_dsa"
        android:layout_marginEnd="@dimen/dp_8_dsa"
        android:layout_marginTop="@dimen/dp_8_dsa"
        android:layout_marginBottom="@dimen/dp_8_dsa"
        app:cardCornerRadius="@dimen/dp_16_dsa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_8_dsa">

            <ImageView
                android:id="@+id/img_recent"
                android:layout_width="@dimen/dp_64_dsa"
                android:layout_height="@dimen/dp_64_dsa"
                android:layout_marginStart="@dimen/dp_8_dsa"
                android:layout_marginTop="@dimen/dp_8_dsa"
                android:layout_marginBottom="@dimen/dp_8_dsa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txt_recent_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/food_name"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14_dsa"
                app:layout_constraintBottom_toTopOf="@+id/txt_recent_quantity"
                app:layout_constraintStart_toEndOf="@+id/img_recent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_recent_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_italic"
                android:text="@string/quantity"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12_dsa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txt_recent_Name"
                app:layout_constraintTop_toBottomOf="@+id/txt_recent_Name" />

            <TextView
                android:id="@+id/price_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16_dsa"
                android:fontFamily="@font/lato_italic"
                android:text="8"
                android:textColor="#8BC34A"
                android:textSize="@dimen/sp_12_dsa"
                app:layout_constraintBottom_toBottomOf="@+id/txt_recent_quantity"
                app:layout_constraintStart_toEndOf="@+id/txt_recent_quantity"
                app:layout_constraintTop_toTopOf="@+id/txt_recent_quantity" />

            <TextView
                android:id="@+id/txt_recent_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:text="@string/_7"
                android:textColor="@color/textColor"
                android:textSize="@dimen/sp_22_dsa"
                android:layout_marginEnd="@dimen/dp_44_dsa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>