<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dp_400_dsa"
        android:layout_height="@dimen/dp_120_dsa"
        android:layout_marginTop="@dimen/dp_16_dsa"
        android:layout_marginBottom="@dimen/dp_8_dsa"
        app:cardCornerRadius="@dimen/dp_24_dsa"
        app:cardElevation="@dimen/dp_4_dsa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_addtocartmenu"
                android:layout_width="@dimen/dp_120_dsa"
                android:layout_height="@dimen/dp_28_dsa"
                android:layout_marginTop="@dimen/dp_8_dsa"
                android:background="@drawable/addtocartshape"
                android:gravity="center"
                android:text="@string/add_to_cart"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14_dsa"
                app:layout_constraintEnd_toEndOf="@+id/txt_pricemenu"
                app:layout_constraintStart_toStartOf="@+id/txt_pricemenu"
                app:layout_constraintTop_toBottomOf="@+id/txt_pricemenu" />

            <TextView
                android:id="@+id/txt_pricemenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24_dsa"
                android:layout_marginStart="@dimen/dp_44_dsa"
                android:text="@string/_7"
                android:textColor="@color/textColor"
                android:textSize="@dimen/sp_28_dsa"
                android:layout_marginEnd="@dimen/dp_64_dsa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textdollas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textColor="@color/textColor"
                android:textSize="@dimen/sp_28_dsa"
                android:layout_marginStart="@dimen/dp_4_dsa"
                app:layout_constraintBottom_toBottomOf="@+id/txt_pricemenu"
                app:layout_constraintStart_toEndOf="@+id/txt_pricemenu"
                app:layout_constraintTop_toTopOf="@+id/txt_pricemenu" />

            <ImageView
                android:id="@+id/img_menu"
                android:layout_width="@dimen/dp_88_dsa"
                android:layout_height="@dimen/dp_88_dsa"
                android:layout_marginStart="@dimen/dp_8_dsa"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txt_FoodNameMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16_dsa"
                android:fontFamily="@font/lato_regular"
                android:text="@string/food_name"
                android:textSize="@dimen/sp_20_dsa"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/img_menu"
                app:layout_constraintStart_toEndOf="@+id/img_menu"
                app:layout_constraintTop_toTopOf="@+id/img_menu" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>